    <tbody>
        {{#each ordens}}
        <tr class="is-fullwidth">
            <th><abbr title="Aparelho">{{aparelho}}</abbr></th>
            <th><abbr title="Defeito">{{defeito}}</abbr></th>
            <th><abbr title="Serviço">{{servico}}</abbr></th>

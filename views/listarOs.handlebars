<table class="table is-fullwidth">
    <thead>
        <tr>
            <th><abbr title="Aparelho">Aparelho</abbr></th>
            <th><abbr title="Defeito">Defeito</abbr></th>
            <th><abbr title="Servico">Serviço</abbr></th>
            <th><abbr title="Valor">Valor</abbr></th>
            <th><abbr title="Status">Status</abbr></th>
            <th><abbr title="Autorizado">Autorizado ?</abbr></th>
            <th><abbr title="Cliente">Cliente</abbr></th>
            <th><abbr title="acao">Ação</abbr></th>
        </tr>
